# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                     controllers.Application.index
GET    /code/*postingId      controllers.Application.code(postingId)
GET    /admin                controllers.AdminController.index
POST   /posting/save         controllers.AdminController.save
GET    /posting/all          controllers.AdminController.findAllPostings
GET    /posting/*postingId   controllers.AdminController.findPostingById(postingId)
POST   /posting/delete       controllers.AdminController.delete

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file         controllers.Assets.at(path="/public", file)
